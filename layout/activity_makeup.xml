<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Makeup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/logo1"
            android:background="@color/black"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:background="#070707"
                android:textStyle="bold"
                android:text="GAJRAJ"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:fontFamily="serif"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:background="#070707"

                android:text="Salon and Spa"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:fontFamily="serif"></TextView></LinearLayout></LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c1">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/classicmakeup"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="CLASSIC MAKEUP"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Sophisticated and dramatic,the classic look focuses on eye liner,eyebrows,lips and lashes.\n\n
                                             300Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="160dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c2">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/artisticmakeup"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="ARTISTIC MAKEUP"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Application of cosmetic paint to a persons face using some makeup products.
                                                         \n  \n                                          5000Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="320dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c3">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/hdmakeup"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="HD MAKEUP"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="HD makeup manages to appear invisible feels feather light and hides all flaws including uneven texture,scras and pores.
                                                           \n                                       20000Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="480dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c4">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/engagementmakeup"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="ENGAGEMENT MAKEUP"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Engagement makeup is the in-between makeup routine .Its neither party makeup nor as heavy as bridal makeup.
                                              \n                                            5000Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="650dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c5">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/bridalmakeup"></ImageView>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="BRIDAL MAKEUP"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Bridal makeup is used to complement both your features and your wedding outfit,ensuring a cohesive,superior appearance
                                              \n                                        10000Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginTop="900dp"
                android:text=""
                android:textSize="40dp"
                android:textAlignment="center"
                android:background="#070707"
                ></TextView>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>