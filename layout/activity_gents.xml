<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gents">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frm">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#3EC143"
                android:id="@+id/hair"
                android:onClick="btn3"
                android:drawableTop="@drawable/hair"
                android:textAlignment="center"
                android:text="Hair"></Button>
            <Button
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#3EC143"
                android:id="@+id/facial"
                android:onClick="facial"
                android:drawableTop="@drawable/facialm"
                android:textAlignment="center"
                android:text="Facial"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="400dp"
                android:id="@+id/beard"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#3EC143"
                android:onClick="beard"
                android:drawableTop="@drawable/shaving2"
                android:textAlignment="center"
                android:text="Beard" />
            <Button
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="400dp"
                android:id="@+id/massage"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#3EC143"
                android:onClick="massage"
                android:drawableTop="@drawable/massagelogo"
                android:textAlignment="center"
                android:text="Massage"></Button>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>