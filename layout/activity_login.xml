<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="600dp"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="60dp"
        android:orientation="vertical"
        android:background="@drawable/sample"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/logo1"

            ></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/people1"></ImageView>
            <EditText
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#E6BF4A"
                android:hint="ENTER USERNAME"
                android:textSize="15sp"
                android:textColorHint="#E6BF4A"
                android:backgroundTint="#E6BF4A"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/lock1"></ImageView>
            <EditText
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:inputType="numberPassword"
                android:hint="ENTER PASSWORD"
                android:textSize="15sp"
                android:textColorHint="#E6BF4A"
                android:textColor="#E6BF4A"
                android:backgroundTint="#E6BF4A"></EditText>

        </LinearLayout>
        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:text="LOGIN"
            android:textSize="20sp"
            android:backgroundTint="#E6BF4A"
            android:textColor="#000000"
           android:onClick="bt"></Button>
        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/symbol"
            ></ImageView>
    </LinearLayout>
</LinearLayout>