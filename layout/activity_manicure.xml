<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".manicure">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/logo1"
            android:background="@color/black"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:background="#070707"
                android:textStyle="bold"
                android:text="GAJRAJ"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:fontFamily="serif"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:background="#070707"

                android:text="Salon and Spa"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:fontFamily="serif"></TextView></LinearLayout></LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c1">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/handcleaner"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="HAND CLEANUP"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="3 step waterless is infused with flower extract for total relaxation.It nourishes and destresses dry skin  .
                    \n                                         500Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="160dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c2">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/antitan"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="LEMONADE ANTI TAN"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Lemonade anti-tan is hand spa treatment clear away dead skin.Enables hands to look more brighter. .
                                                          \n                                          600Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="320dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c3">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/nailart"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="NAIL ART"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Nail Art provides a valuable oportunity for ladies to repair their nails.It can effectively reshape and model fantastic art on nail .
                                                           \n                                       200Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="500dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c4">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/regularnail"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="REGULAR NAIL POLISH"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Applying nail polish helps to alleviate stress,boost your mood and give you confidence.\n
                                              \n                                            100Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="670dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c5">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/nailcare"></ImageView>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="NAILCARE TREATMENT"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Nail care treatment helps to prevent infection and other health problems.\n
                                              \n                                        800Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginTop="900dp"
                android:text=""
                android:textSize="40dp"
                android:textAlignment="center"
                android:background="#070707"
                ></TextView>
        </RelativeLayout>

    </ScrollView>

</LinearLayout>