<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4B8B4"
    tools:context=".Fragment2">

    <Button
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="150dp"
        android:text="HAIR"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#F1286C"
        android:textAlignment="center"
        android:drawableTop="@drawable/ladyhair"
        android:onClick="showhair"></Button>
    <Button
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="150dp"
        android:text="makeup"
        android:textSize="20sp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="#F1286C"
        android:textAlignment="center"
        android:drawableTop="@drawable/ladymakeup"
        android:onClick="showmakeup"></Button>
    <Button
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="300dp"
        android:text="facial"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#F1286C"
        android:textAlignment="center"
        android:drawableTop="@drawable/ladyfacial"
        android:onClick="showfacial"></Button>
    <Button
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="300dp"
        android:text="manicure"
        android:textSize="20sp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="#F1286C"
        android:textAlignment="center"
        android:drawableTop="@drawable/ladymanicure"
        android:onClick="showmanicure"></Button>
    <Button
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="450dp"
        android:text="Pedicure"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#F1286C"
        android:textAlignment="center"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ladypedicure"
        android:onClick="showpedicure"></Button>
    <Button
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="450dp"
        android:text="Waxing"
        android:textSize="20sp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="#F1286C"
        android:textAlignment="center"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ladywax"
        android:onClick="showwaxing"></Button>

</FrameLayout>