<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".waxing">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/logo1"
            android:background="@color/black"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:background="#070707"
                android:textStyle="bold"
                android:text="GAJRAJ"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:fontFamily="serif"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:background="#070707"

                android:text="Salon and Spa"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:fontFamily="serif"></TextView></LinearLayout></LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c1">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/facewax"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="FACE WAXING"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="facial waxing removes all unwanted hairs from eyebrows and the upper lip and from different areas of face .
                    \n                                         200Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="160dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c2">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/rollon"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="ROLL ON WAXING"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Roll on wax has ultra-hygenic application.Suitable for normal and dry skin.Removes all the tiny hairs.
                                                          \n                                          600Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="320dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c3">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/honeywax"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="HONEY WAXING"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Honey wax brightens your complexion,has anti-inflammatory and anti-bacterial properties,fades scars.
                                                           \n                                       600Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="500dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c4">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/chocowax"></ImageView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="CHOCOLATE WAXING"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Chocolate waxing prevents ingrowth and delays hair growth. It is skin friendly and does not cause swelling
                                              \n                                            800Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="670dp"
                app:cardElevation="50dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/c5">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/bead"></ImageView>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="BEAD WAXING"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:text="Bead waxing are stripless and less messy than traditional soft wax.Mostly done in summers for more comfortable hair-removal process.
                                              \n                                        700Rs"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="130dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"></TextView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginTop="900dp"
                android:text=""
                android:textSize="40dp"
                android:textAlignment="center"
                android:background="#070707"
                ></TextView>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>